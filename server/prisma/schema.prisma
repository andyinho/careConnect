enum UploadStatus {
  RECEIVED
  PENDING_EXTRACTION
  NEEDS_REVIEW
  APPROVED
  FAILED
}

enum ExtractionJobStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Clinic {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())

  users   User[]
  uploads Upload[]
}

model User {
  id        String   @id @default(uuid())
  clinicId  String
  email     String   @unique
  role      String
  createdAt DateTime @default(now())

  clinic  Clinic  @relation(fields: [clinicId], references: [id])
  uploads Upload[] @relation("UploadedBy")
}

model Upload {
  id               String   @id @default(uuid())
  clinicId         String
  uploadedByUserId String
  originalFilename String
  mimeType         String
  storageKey       String
  status           UploadStatus @default(RECEIVED)
  patientLabel     String?

  @@index([clinicId])

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  clinic     Clinic @relation(fields: [clinicId], references: [id])
  uploadedBy User   @relation("UploadedBy", fields: [uploadedByUserId], references: [id])
  
  extractionJobs   ExtractionJob[]
}

model ExtractionJob {
  id            String   @id @default(uuid())
  uploadId      String
  status        ExtractionJobStatus @default(QUEUED)
  modelName     String?
  promptVersion String?
  errorMessage  String?

  @@index([uploadId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  upload Upload @relation(fields: [uploadId], references: [id])
}
